<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10,10,0,10" Grid.Column="0">
                <TextBlock Text="名前" FontSize="20" Margin="5"/>
                <TextBlock Text="電話番号" FontSize="20" Margin="5"/>
                <TextBlock Text="住所" FontSize="20" Margin="5"/>
                <Button Content="画像&#xa;選択" x:Name="PictureButton" FontSize="25" Margin="5" Height="80" Click="PictureButton_Click"/>
                <Button x:Name="ClearButton" Content="クリア" FontSize="20" Margin="5" Click="ClearButton_Click"/>
            </StackPanel>
            <StackPanel Margin="0,10,10,10" Grid.Column="1">
                <TextBox x:Name="NameTextBox" FontSize="20" Margin="5"/>
                <TextBox x:Name="PhoneTextBox" FontSize="20" Margin="5"/>
                <TextBox x:Name="AddressTextBox" FontSize="20" Margin="5"/>
                <Image x:Name="PictureBox" Margin="5" Height="150"/>
                <Button Content="保存(_S)" x:Name="SaveButton"  Click="SaveButton_Click" FontSize="30" Margin="5"/>
                <Button Content="削除(_X)" x:Name="DeleteButton" Click="DeleteButton_Click" FontSize="15" Width="100" Margin="0,5,25,5" HorizontalAlignment="Right"/>
                <Button Content="更新(_U)" x:Name="UpdateButton" Click="UpdateButton_Click" FontSize="15" Width="100" Margin="0,0,25,5" HorizontalAlignment="Right"/>
            </StackPanel>

        </Grid>
        <StackPanel Margin="10" Grid.Column="1">
            <TextBox x:Name="SearchTextBox" Margin="0,5,0,0" FontSize="20" TextChanged="SearchTextBox_TextChanged"/>
            <ListView x:Name="CustomerListView" Margin="0,5,0,0" Height="350" SelectionChanged="CustomerListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Image Width="50" Height="50" Margin="5" Source="{Binding Picture}" Grid.Column="0" />
                            <StackPanel Grid.Column="1">
                                
                                <TextBlock Text="{Binding Name}" FontSize="20"/>
                                <TextBlock Text="{Binding Phone}" FontSize="10"/>
                                <TextBlock Text="{Binding Address}" FontSize="10"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
