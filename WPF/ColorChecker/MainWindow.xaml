<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="ColorChecker" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="colorArea" Margin = "10" Background="Black"/>

        <Grid Grid.Column="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--ここから追加-->

            <TextBlock Grid.Column="0" Grid.Row="0" FontSize="30" Text="Ｒ" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Column = "1" Grid.Row="0" Maximum="255" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="rValue" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" FontSize="20" TextAlignment="Right" Text="{Binding ElementName=rSlider ,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="0" Grid.Row="1" FontSize="30" Text="Ｇ" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Column = "1" Grid.Row="1"  Maximum="255" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" FontSize="20" TextAlignment="Right" Text="{Binding ElementName=gSlider ,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Grid.Column="0" Grid.Row="2" FontSize="30" Text="Ｂ" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Column = "1" Grid.Row="2"  Maximum="255" VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right" Text="{Binding ElementName=bSlider ,Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <ComboBox x:Name="colorSelectComboBox" Grid.Row="3" Grid.ColumnSpan="3" Margin="20" ItemsSource="{Binding}"  SelectedValue="{Binding Color}" SelectionChanged="colorSelectComboBox_SelectionChanged" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

        </Grid>
        <Grid Grid.Column="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Button x:Name="stockButton" Grid.Row="0" Content="STOCK" FontSize="18" Margin="10" Click="stockButton_Click" />
            <Button x:Name="deleteButton" Grid.Row="1" Content="DELETE" FontSize="18" Margin="10" Click="deleteButton_Click"/>
            <ListBox x:Name="stocList" Grid.Row="2" Margin="10,5" FontSize="16" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" Margin="5,0" BorderThickness="1" BorderBrush="Black">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="5,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </Grid>
    </Grid>
</Window>
