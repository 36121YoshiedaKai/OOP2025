<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="TenkiApp" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 現在時刻 -->
            <RowDefinition Height="Auto"/>
            <!-- 都道府県選択 -->
            <RowDefinition Height="5*"/>
            <!-- 今の天気（左右） -->
            <RowDefinition Height="2*"/>
            <!-- 1時間ごとの天気 -->
            <RowDefinition Height="2*"/>
            <!-- 1週間の天気 -->
        </Grid.RowDefinitions>
        <!-- ▼ 行0：現在時刻 -->
        <TextBlock Grid.Row="0"
                   x:Name="nowtime"
                   HorizontalAlignment="Right"
                   FontSize="14"
                   Margin="0,0,10,8"/>

        <!-- ▼ 行1：都道府県選択 -->
        <ComboBox Grid.Row="1"
                  x:Name="PrefecturesList"
                  Height="30"
                  FontSize="16"
                  Margin="10,0,10,15"
                  SelectionChanged="PrefecturesList_SelectionChanged"/>

        <!-- ▼ 行2：今の天気 + 詳細 -->
        <Grid Grid.Row="2" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- 左：今の天気エリア -->
            <Grid Grid.Column="0" Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="今の天気"
                           VerticalAlignment="Top"
                           FontSize="20"/>
                <TextBlock x:Name="Wname" Grid.Row="1"
                           Text="" VerticalAlignment="Top" 
                           FontSize="20"/>

                <Image x:Name="WeatherIcon"
                       Grid.Row="1"
                       Width="150"
                       Height="150"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            </Grid>

            <!-- 右：気温など -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 気温 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="気温" FontSize="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="TempValue" Text="--℃" FontSize="20"
                   Grid.Column="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <!-- 湿度 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="湿度" FontSize="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="HumidityValue" Text="--%" FontSize="20"
                   Grid.Column="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <!-- 風速 -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="風速" FontSize="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="WindSpeedValue" Text="-- m/s" FontSize="20"
                   Grid.Column="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <!-- 風の向き -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="体感温度" FontSize="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <TextBlock x:Name="Sensibletemperature" Text="--℃" FontSize="20"
                   Grid.Column="1"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

            </Grid>
        </Grid>

        <!-- ▼ 行3：1時間ごとの天気 -->
        <!-- ▼ 行3：1時間ごとの天気 -->
        <Grid Grid.Row="3" Margin="10,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="一時間ごとの天気" FontSize="15" HorizontalAlignment="Left" Margin="0,0,0,0"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                <Grid x:Name="HourlyWeatherGrid">
                    <!-- 行定義: 3行 (時間、気温、風速) -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 時間 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 気温 -->
                        <RowDefinition Height="Auto"/>
                        <!-- 風速 -->
                    </Grid.RowDefinitions>

                    <!-- 1行目: 時間 -->
                    <TextBlock Grid.Row="0" Text="時間" HorizontalAlignment="Center" FontSize="14" Margin="3"/>

                    <!-- 2行目: 気温 -->
                    <TextBlock Grid.Row="1" Text="気温" HorizontalAlignment="Center" FontSize="14" Margin="3"/>

                    <!-- 3行目: 風速 -->
                    <TextBlock Grid.Row="2" Text="風速" HorizontalAlignment="Center" FontSize="14" Margin="3"/>
                </Grid>
            </ScrollViewer>
        </Grid>


        <!-- ▼ 行4：1週間の天気 -->
        <Grid Grid.Row="4" Margin="10,5,10,5">
            <TextBlock Text="一週間の天気"/>
        </Grid>
    </Grid>
</Window>
