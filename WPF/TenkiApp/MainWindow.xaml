<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TenkiApp"
        mc:Ignorable="d"
        Title="TenkiApp" Height="650" Width="750">

    <Grid>
        <!-- 背景グラデーションを白から薄い青に変更 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="White" Offset="0" />
                <!-- 白 -->
                <GradientStop Color="#ADD8E6" Offset="1" />
                <!-- 薄い青 -->
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   x:Name="nowtime"
                   HorizontalAlignment="Right"
                   FontSize="14"
                   Margin="0,0,10,8"/>

        <Rectangle Grid.Row="0"
                   Height="1"
                   Fill="#D3E9FF"
                   VerticalAlignment="Bottom"
                   Margin="10,0,10,0"/>

        <ComboBox Grid.Row="1"
                  x:Name="PrefecturesList"
                  Height="30"
                  FontSize="16"
                  Margin="10,0,10,15"
                  SelectionChanged="PrefecturesList_SelectionChanged">

            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Foreground="DarkSlateGray" FontSize="16"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>

            <!-- コンボボックスのスタイル -->
            <ComboBox.Style>
                <Style TargetType="ComboBox">
                    <!-- コンボボックスのボーダー色 -->
                    <Setter Property="BorderBrush" Value="#ADD8E6"/>
                    <!-- 空色 -->
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Background" Value="White"/>
                    <!-- 背景白 -->
                    <Setter Property="Foreground" Value="DarkSlateGray"/>
                    <!-- テキスト色 -->
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>

                    <!-- ドロップダウンのリストのアイテムのスタイル -->
                    <Style.Triggers>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter Property="Background" Value="#ADD8E6"/>
                            <!-- ドロップダウン背景色（空色） -->
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Style>
        </ComboBox>

        <Rectangle Grid.Row="1"
                   Height="1"
                   Fill="#D3E9FF"
                   VerticalAlignment="Bottom"
                   Margin="10,0,10,0"/>

        <Grid Grid.Row="2" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="今の天気"
                           VerticalAlignment="Top"
                           FontSize="20"/>
                <TextBlock x:Name="Wname" Grid.Row="1"
                           Text="" VerticalAlignment="Top" 
                           FontSize="20"/>

                <Image x:Name="WeatherIcon"
                       Grid.Row="1"
                       Width="150"
                       Height="150"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            </Grid>

            <Rectangle Grid.Column="0"
                       Width="1"
                       Fill="#D3E9FF"
                       HorizontalAlignment="Right"
                       Margin="0,0,5,0"/>

            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="気温" FontSize="20"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TempValue" Text="--℃" FontSize="20"
                           Grid.Column="1"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="湿度" FontSize="20"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="HumidityValue" Text="--%" FontSize="20"
                           Grid.Column="1"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="風速" FontSize="20"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="WindSpeedValue" Text="-- m/s" FontSize="20"
                           Grid.Column="1"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="体感温度" FontSize="20"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Sensibletemperature" Text="--℃" FontSize="20"
                           Grid.Column="1"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>

            </Grid>
        </Grid>

        <Rectangle Grid.Row="2"
                   Height="3"
                   Fill="#D3E9FF"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,0"/>

        <Grid Grid.Row="3" Margin="10,5,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="一時間ごとの天気" FontSize="17" HorizontalAlignment="Left" Margin="0,10,0,90" Grid.RowSpan="2"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" Margin="0,35,0,-15">
                <Grid x:Name="HourlyWeatherGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="時間" HorizontalAlignment="Center" FontSize="16" Margin="3"/>

                    <TextBlock Grid.Row="1" Text="気温" HorizontalAlignment="Center" FontSize="16" Margin="3"/>

                    <TextBlock Grid.Row="2" Text="風速" HorizontalAlignment="Center" FontSize="16" Margin="3"/>
                </Grid>
            </ScrollViewer>
        </Grid>

        <Rectangle Grid.Row="3"
                   Height="3"
                   Fill="#D3E9FF"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,0"/>

        <Grid Grid.Row="4" Margin="10,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="一週間の天気" FontSize="17" HorizontalAlignment="Left" Margin="0,0,0,0"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                <Grid x:Name="WeeklyWeatherGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
